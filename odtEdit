const fs = require('fs');
const AdmZip = require('adm-zip');
const xml2js = require('xml2js');
const { exec } = require('child_process');
const { promisify } = require('util');


async function fillOdtBlanks(odtFilePath, outputFilePath, customData) {
  const zip = new AdmZip(odtFilePath);
  const zipEntries = zip.getEntries();

  const contentXmlEntry = zipEntries.find(entry => entry.entryName === 'content.xml');
  if (!contentXmlEntry) {
    console.error('content.xml not found in the .odt file.');
    return;
  }
  const contentXml = contentXmlEntry.getData().toString('utf8');

  const parser = new xml2js.Parser();
  const builder = new xml2js.Builder();
  let contentObj = await parser.parseStringPromise(contentXml);

  let xmlContent = JSON.stringify(contentObj);
  console.log(customData)

  xmlContent = xmlContent.replace(/{tenant.first_name}/g, customData.Tenant.first_name_1);
  xmlContent = xmlContent.replace(/{tenant.last_name}/g, customData.Tenant.last_name_1);
  xmlContent = xmlContent.replace(/{property.street_address}/g, customData.street_address);
  xmlContent = xmlContent.replace(/{property.city}/g, customData.city);
  xmlContent = xmlContent.replace(/{property.county}/g, customData.county);
  xmlContent = xmlContent.replace(/{property.state_province_region}/g, customData.state_province_region);
  xmlContent = xmlContent.replace(/{property.postal}/g, customData.postal);
  xmlContent = xmlContent.replace(/{particular.total_written}/g, customData.Particular.total_written);
  xmlContent = xmlContent.replace(/{particular.total_dollar}/g, customData.Particular.total_dollar);
  xmlContent = xmlContent.replace(/{particular.total_cent}/g, customData.Particular.total_cent);
  xmlContent = xmlContent.replace(/{particular.first_name}/g, customData.Particular.pay_rent_first);
  xmlContent = xmlContent.replace(/{particular.last_name}/g, customData.Particular.pay_rent_last);
  xmlContent = xmlContent.replace(/{particular.street_address}/g, customData.Particular.street_address);
  xmlContent = xmlContent.replace(/{particular.city}/g, customData.Particular.city);
  xmlContent = xmlContent.replace(/{particular.country}/g, customData.Particular.country);
  xmlContent = xmlContent.replace(/{particular.state_province_region}/g, customData.Particular.state_province_region);
  xmlContent = xmlContent.replace(/{particular.postal}/g, customData.Particular.postal);
  xmlContent = xmlContent.replace(/{particular.days_open}/g, customData.Particular.days_open);
  xmlContent = xmlContent.replace(/{particular.hours_open}/g, customData.Particular.hours_open);
  xmlContent = xmlContent.replace(/{landlord.first_name}/g, customData.Landlord.first_name);
  xmlContent = xmlContent.replace(/{landlord.last_name}/g, customData.Landlord.last_name);
  // xmlContent = xmlContent.replace(/{notice.datatime}/g, customData.notice.createdAt);
  xmlContent = xmlContent.replace(/{timestamp}/g, new Date());
  xmlContent = xmlContent.replace(/{tenant1}/g, customData.Tenant.email_1 ? `${customData.Tenant.first_name_1} ${customData.Tenant.last_name_1}` : "");
  xmlContent = xmlContent.replace(/{tenant2}/g, customData.Tenant.email_2 ? `${customData.Tenant.first_name_2} ${customData.Tenant.last_name_2}` : "");
  xmlContent = xmlContent.replace(/{tenant3}/g, customData.Tenant.email_3 ? `${customData.Tenant.first_name_3} ${customData.Tenant.last_name_3}` : "");
  xmlContent = xmlContent.replace(/{tenant4}/g, customData.Tenant.email_4 ? `${customData.Tenant.first_name_4} ${customData.Tenant.last_name_4}` : "");

  const updatedContentXml = builder.buildObject(JSON.parse(xmlContent));

  zip.updateFile('content.xml', Buffer.from(updatedContentXml));

  zip.writeZip(outputFilePath);
  console.log(`Filled .odt file has been saved as ${outputFilePath}`);
}

async function convertOdtToPdf(inputOdtPath, outputPdfPath) {
  const execAsync = promisify(exec);
  const command = `libreoffice --headless --convert-to pdf ${inputOdtPath} --outdir ./${outputPdfPath}`;
  try {
    const { stdout, stderr } = await execAsync(command)
    if (stderr) {
      console.error('Error:', stderr);
    } else {
      console.log('Success:', stdout);
    }
  } catch (error) {
    console.error('Error executing the command:', error);
  }
}

module.exports = {
  fillOdtBlanks,
  convertOdtToPdf
}